<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.datapersistent.FilePersistenceMainActivity"
    android:orientation="vertical">


    <EditText
        android:id="@+id/et_filepersist_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type something here"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_sharepres_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="mypresclick"
            android:text="context"/>
        <Button
            android:id="@+id/btn_sharepres_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="mypresclick"
            android:text="activity"/>
        <Button
            android:id="@+id/btn_sharepres_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="mypresclick"
            android:text="presManager"/>
        <Button
            android:id="@+id/btn_sharepres_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="mypresclick"
            android:text="restorePrefs"/>

    </LinearLayout>

</LinearLayout>
